.panel.panel-primary
  .panel-heading= t "the_comments.nav.header"
  .panel-body
    %p= link_to raw("&larr; Назад в Кабинет"), cabinet_url
    %hr

    %h5 Входящие:
    %ul
      %li= link_to "Не опубликованные #{@user.draft_comcoms_count}",  [:draft, :comments]
      %li= link_to "Опубликованные #{@user.published_comcoms_count}", [:published, :comments]
      %li= link_to "Удаленные #{@user.deleted_comcoms_count}",        [:deleted, :comments]
      %li= link_to "Спам #{@user.comcoms.where(spam: true).count}", [:spam, :comments]
    
    %h5 Все в системе:
    %ul
      %li= link_to "Не опубликованные #{Comment.with_state(:draft).count}",     [:total_draft, :comments]
      %li= link_to "Опубликованные    #{Comment.with_state(:published).count}", [:total_published, :comments]
      %li= link_to "Удаленные         #{Comment.with_state(:deleted).count}",   [:total_deleted, :comments]
      %li= link_to "Спам #{Comment.where(spam: true).count}", [:total_spam, :comments]

    -#
      %h5 Написанные мной:
      %ul
        %li= link_to "Не опубликованные #{@user.draft_comments_count}", [:new, :comment]
        %li= link_to "Опубликованные #{@user.published_comments_count}", [:new, :comment]
        %li= link_to "Удаленные #{@user.deleted_comments_count}", [:trash, :comments]
        %li= link_to "Спам", [:trash, :comments]

